<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.grupOlustur.grupOlusturFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grup Adı" />

        <EditText
            android:id="@+id/grupAdi"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:ems="10"
            android:inputType="text"
            android:text="Name" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grup Simgesi" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="122dp"
            android:layout_height="79dp"
            android:src="@drawable/kartal" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grup Açıklaması" />

        <EditText
            android:id="@+id/aciklama"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Name" />

        <Button
            android:id="@+id/grupOlusturButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRUP OLUŞTUR" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gruplar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewgrup"
            android:layout_width="match_parent"
            android:layout_height="284dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:background="#F44336"
            android:gravity="center"
            android:text="201913709099 - Giray SAYLAN"
            android:textSize="16sp" />

    </LinearLayout>
</FrameLayout>